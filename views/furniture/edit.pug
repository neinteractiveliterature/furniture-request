extends ../layout

block content
    nav(aria-label="breadcrumb")
        ol.breadcrumb
            li.breadcrumb-item
                a(href='/') Home
            li.breadcrumb-item
                a(href='/furniture') Furniture
            li.breadcrumb-item.active(aria-current="page")= furniture.name

    .row
        .col-sm-8.offset-sm-2
            .card
                .card-header= 'Edit Furniture: ' + furniture.name
                .card-body
                    form.form.needs-validation(method="POST" action="/furniture/" + furniture.id novalidate)
                        input(type="hidden", name="_method",  value="PUT")
                        input(type="hidden", name='_csrf',value=csrfToken)
                        input(type="hidden", name='furniture[id]',value=furniture.id)
                        include ./_form.pug

append scripts
    script(src='/javascripts/validator.js')
