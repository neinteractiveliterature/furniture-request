extends ../layout

block content
    if ! backto || true
        .alert.alert-info.alert-dismissible.fade.show
            | !{displayNotes.show}
            button.close(type="button" data-dismiss="alert" aria-label="Close")
                span(aria-hidden="true") &times;

    form.form.needs-validation.my-3(method="POST" action="/requests/"+run.event.id + '/'+run.id novalidate)
        input(type="hidden", name="_method",  value="PUT")
        input(type="hidden", name='_csrf',value=csrfToken)
        if (backto)
            input(type="hidden", name='_backto',value=backto)
        for room in run.rooms
            .row.my-3
                .col-md-12
                    .card
                        h3.card-header= room.name
                        .card-body
                            .form-check.pb-3
                                input.form-check-input(
                                    type='checkbox'
                                    name='requests[room-'+room.id +'][no_furniture]'
                                    checked=(run.no_furniture || requests['room-'+room.id].no_furniture)
                                    id='requests_'+room.id+'_no_furniture'
                                    disabled=!checkPermission({permission: 'GM Coordinator', eventId: run.event.id})
                                    )
                                label.form-check-label(for='request_'+room.id+'_no_furniture')
                                    | No furniture needed for this room
                                if !config.get('app.arisiaMode')
                                    .form-text.text-muted
                                        | For events in the Parlors, or for Forum@Intercon events, this indicates that the preset is sufficient
                            +furnitureList(run.event.id, room, requests, furniture, 0)

        .row.my-3
                .col-md-12
                    .card
                        h3.card-header Additional Items
                        .card-body.py-2
                            h5.card-title
                                .control-label(for="run_food") Food and Bartending for this Run
                            .card-text
                                | !{displayNotes.food}

                                if checkPermission({permission: 'GM Coordinator', eventId: run.event.id})
                                    textarea.form-control(name="run[food]" id="run_food" rows=3)
                                       = run.food
                                else
                                    .card
                                        .card-body= run.food || 'No food requested'

                        .card-body.py-2
                            h5.card-title
                                label.control-label(for="run_notes")=config.get('app.specialRequestsName')

                            .card-text
                                | !{displayNotes.special}
                                if checkPermission({permission: 'GM Coordinator', eventId: run.event.id})
                                    textarea.form-control(name="run[notes]" id="run_notes" rows=3)
                                        = run.notes
                                else
                                    .card
                                        .card-body= run.notes|| 'No additional information provided'

        form-group
            if checkPermission({permission: 'GM Coordinator', eventId: run.event.id})
                button.btn.btn-primary(type="submit") Save Request
            if backto
                a.btn.btn-link(href=backto) Cancel
            else
                a.btn.btn-link(href="/") Cancel

mixin furnitureList(eventId, room, requests, furniture, depth)
    for item in furniture
        -
            function countChildRequests(children){
                let count = 0;
                for (const child of children){
                    if (requests['room-'+room.id].furniture['item-'+child.id]){
                        count += Number(requests['room-'+room.id].furniture['item-'+child.id]);
                    }
                    count += countChildRequests(child.children);
                }
                return count;
            }
            item.childRequests = countChildRequests(item.children);

        .furniture-parent-row(
            id=`furniture-room-${room.id}-item-${item.id}`
        )
            .row.border-top.py-1
                +furnitureEntry(room, item, requests, run.event.id, depth)
            if item.children.length
                div.collapse.furniture-children-row(
                    class=!!item.childRequests && 'show'
                    id=`furniture-room-${room.id}-item-${item.id}-children`

                )
                    +furnitureList(eventId, room, requests, item.children, depth+1)

mixin furnitureEntry(room, item, requests, eventId, depth)
    .col-md-3.offset-md-1
        span(
           style=`padding-left: ${10*depth}px`
        )
            if item.description
                span.furniture-popover.popup-indicator(
                    data-container="body"
                    data-toggle="popover"
                    data-trigger="hover click"
                    data-placement="top"
                    data-content=item.description)= item.name
            else
                = item.name
    .col-md-3
        if checkPermission({permission: 'GM Coordinator', eventId: eventId})
            input.form-control.form-control-sm.furniture-item-quantity(
                style=!!item.childRequests && 'display:none'
                type="number"
                min=0
                max=item.max_amount
                placeholder="Quantity up to "+item.max_amount
                name='requests[room-'+room.id +'][furniture][item-'+item.id+']'
                value=requests['room-'+room.id].furniture['item-'+item.id]
            )
            div.invalid-feedback= 'Please choose a value up to ' + item.max_amount
        else
            span(
                style=!!item.childRequests && 'display:none'
            )= requests['room-'+room.id].furniture['item-'+item.id] || 0
    if item.children.length
        .col.text-right
            button.btn.btn-sm.btn-outline-primary.collapse-toggle(
                data-target=`#furniture-room-${room.id}-item-${item.id}-children`
                role="button"
                aria-expanded=childrenRequests?'true':'false'
                aria-controls=`furniture-room-${room.id}-item-${item.id}-children`
            )
                i.fa.fa-chevron-down
                i.fa.fa-chevron-up




append scripts
    script(src='/javascripts/validator.js')
    script(src='/javascripts/requests.js')
