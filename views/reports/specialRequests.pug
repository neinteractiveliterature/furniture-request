

block content
    .row
        .col-md-2
            button.btn.btn-outline-primary.btn-sm#exportCSV
                i.fa.fa-download
                |  Download CSV

    .table-responsive
        table.table.table-sm.table-hover.table-sorted(data-order='[[ 2, "asc" ]]')
            thead
                tr
                    th Type
                    th Event
                    th Run
                    th Room(s)
                    th Contact
                    th(style='min-width:300px') Request
                    th Actions
            tbody
                for run in runs
                    tr(
                        data-click-object='requests'
                        data-click-id=run.event.id+'/'+run.id
                    )
                        td
                            small= humanize(run.event.event_category.name)
                        td= run.event.title
                        td(data-order=moment(run.starts_at).format(YYYYMMDDHHmmss))= moment(run.starts_at).format('ddd, h:mm A')
                        td
                            small= _.pluck(run.rooms, 'name').join(', ')
                        td
                            a(href='mailto:'+run.created_by.email)= run.created_by.name

                        td
                            .card
                                .card-body.py-1= run.request
                        td
                            if checkPermission({permission: 'gm_liaison', eventId: run.event.id})
                                a.btn.btn-sm.btn-outline-primary.mx-3.float-end(href='/requests/'+run.event.id+'/'+run.id + '?backto=list')
                                    i.fa.fa-edit
                                    |  Edit
                            else
                                a.btn.btn-sm.btn-outline-primary.mx-3.float-end(href='/requests/'+run.event.id+'/'+run.id + '?backto=list')
                                    i.fa.fa-eye
                                    |  View
            tfoot
                if (runs.length > 10)
                    tr
                        th Type
                        th Event
                        th Run
                        th Room(s)
                        th Request
                        th Actions


append scripts
    script(src='/javascripts/data-table.js')
