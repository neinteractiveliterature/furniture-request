{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended",
        "plugin:@graphql-eslint/recommended"
    ],
    "parser": "espree",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "plugins": [
        "promise"
    ],
    "rules": {
        "no-unused-vars": "off",
        "no-console": "off",
        "no-empty-pattern": 2,
        "no-empty": "off",
        "indent": [
            "error",
            4,
            {
              "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "overrides": [
        {
            "files": [
                "*.tsx",
                "*.ts",
                "*.jsx",
                "*.js"
            ],
            "processor": "@graphql-eslint/graphql"
        },
        {
            "files": [
                "*.graphql"
            ],
            "parser": "@graphql-eslint/eslint-plugin",
            "plugins": [
                "@graphql-eslint"
            ]
        }
    ]
}
